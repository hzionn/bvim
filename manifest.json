{
  "manifest_version": 3,
  "name": "quick-vim",
  "version": "0.1.0",
  "description": "Use basic Vim keybindings in text fields on specified websites.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vim-motions.js",
        "vim-state-machine.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}